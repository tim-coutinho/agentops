{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/boshu2/agentops/docs/contracts/memrl-policy.schema.json",
  "title": "MemRL Policy Package",
  "description": "Deterministic MemRL policy contract exported by AgentOps for Olympus consumption.",
  "type": "object",
  "required": [
    "schema_version",
    "default_mode",
    "unknown_failure_class_action",
    "missing_metadata_action",
    "tie_break_rules",
    "rules",
    "rollback_matrix"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "default_mode": {
      "type": "string",
      "enum": ["off", "observe", "enforce"]
    },
    "unknown_failure_class_action": {
      "type": "string",
      "enum": ["retry", "escalate"]
    },
    "missing_metadata_action": {
      "type": "string",
      "enum": ["retry", "escalate"]
    },
    "tie_break_rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "rule_id",
          "memrl_mode",
          "failure_class",
          "attempt_bucket",
          "action",
          "priority"
        ],
        "properties": {
          "rule_id": {
            "type": "string",
            "minLength": 1
          },
          "memrl_mode": {
            "type": "string",
            "enum": ["off", "observe", "enforce"]
          },
          "failure_class": {
            "type": "string",
            "enum": [
              "*",
              "pre_mortem_fail",
              "crank_blocked",
              "crank_partial",
              "vibe_fail",
              "phase_timeout",
              "phase_stall",
              "phase_exit_error"
            ]
          },
          "attempt_bucket": {
            "type": "string",
            "enum": ["*", "initial", "middle", "final", "overflow"]
          },
          "action": {
            "type": "string",
            "enum": ["retry", "escalate"]
          },
          "priority": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      }
    },
    "rollback_matrix": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "trigger_id",
          "metric",
          "metric_source_command",
          "lookback_window",
          "min_sample_size",
          "threshold",
          "operator_action",
          "verification_command"
        ],
        "properties": {
          "trigger_id": {
            "type": "string",
            "minLength": 1
          },
          "metric": {
            "type": "string",
            "minLength": 1
          },
          "metric_source_command": {
            "type": "string",
            "minLength": 1
          },
          "lookback_window": {
            "type": "string",
            "minLength": 1
          },
          "min_sample_size": {
            "type": "integer",
            "minimum": 1
          },
          "threshold": {
            "type": "string",
            "minLength": 1
          },
          "operator_action": {
            "type": "string",
            "minLength": 1
          },
          "verification_command": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
