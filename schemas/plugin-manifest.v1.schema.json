{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentops.dev/schemas/plugin-manifest.v1.schema.json",
  "title": "AgentOps Claude Plugin Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "version"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      }
    },
    "homepage": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commands": {
      "type": "array"
    },
    "skills": {
      "type": "array"
    },
    "agents": {
      "type": "array"
    },
    "hooks": {
      "type": "object"
    }
  }
}
